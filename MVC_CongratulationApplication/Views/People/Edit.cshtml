@model MVC_CongratulationApplication.Domain.Entity.Person

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="People" method="post" enctype="multipart/form-data">
            <div  class="text-danger"></div>
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" name="Name" value="@Model.Name"/>
                @*<span asp-validation-for="Name" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label>Birthday</label>
                <input class="form-control" type="date" name="Birthday" value="@Model.Birthday.ToString("yyyy-MM-dd")" />
                @*<span asp-validation-for="Birthday" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label>File</label>
                <input type="file" name="Image" class="form-control" />
                @*<span asp-validation-for="Filename" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
